<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/emailEditText_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Masukan Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordEditText_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Masukan Password"
        app:layout_constraintEnd_toEndOf="@+id/emailEditText_loginActivity"
        app:layout_constraintStart_toStartOf="@+id/emailEditText_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText_loginActivity" />

    <Button
        android:id="@+id/loginButton_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditText_loginActivity"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/passwordEditText_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText_loginActivity" />

    <TextView
        android:id="@+id/registerTextview_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Belum mempunyai akun? Register disini"
        app:layout_constraintEnd_toEndOf="@+id/loginButton_loginActivity"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/loginButton_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/loginButton_loginActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>